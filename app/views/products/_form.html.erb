        const fileInfo = document.getElementById('file-info');
        const uploadArea = document.getElementById('upload-area');
        
        if (file) {
          // Validate file type
          if (!file.type.startsWith('image/')) {
            alert('‚ùå ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÑ‡∏ü‡∏•‡πå‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û‡πÄ‡∏ó‡πà‡∏≤‡∏ô‡∏±‡πâ‡∏ô');
            input.value = '';
            return;
