<%# หน้ายืนยันข้อมูลก่อนชำระเงิน %>
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-success text-white">
          <h5 class="mb-0">
            <i class="fas fa-check-circle"></i>
            ยืนยันคำสั่งซื้อ
          </h5>
        </div>
        
        <div class="card-body">
          <!-- ข้อมูลสินค้า -->
          <div class="mb-4">
            <h6 class="text-muted">รายการสินค้า</h6>
            <div class="product-info bg-light p-3 rounded">
              <div class="row">
                <div class="col-md-6">
                  <strong><%= @order.product.productName %></strong><br>
                  <small class="text-muted">
                    ราคา: ฿<%= number_with_delimiter(@order.product.productPrice) %> / ชิ้น
                  </small>
                </div>
                <div class="col-md-6 text-end">
                  <div>จำนวน: <span class="badge bg-primary"><%= @order.quantity %></span> ชิ้น</div>
                  <div class="fs-5 fw-bold text-success">
                    รวม: ฿<%= number_with_delimiter(@order.total_amount) %>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- ข้อมูลลูกค้า -->
          <div class="mb-4">
            <h6 class="text-muted">ข้อมูลลูกค้า</h6>
            <div class="customer-info bg-light p-3 rounded">
              <div class="row">
                <div class="col-md-6">
                  <strong><%= @order.customer_name %></strong><br>
                  <i class="fas fa-phone"></i> <%= @order.customer_phone %><br>
                  <% if @order.customer_email.present? %>
                    <i class="fas fa-envelope"></i> <%= @order.customer_email %><br>
                  <% end %>
                </div>
                <div class="col-md-6">
                  <strong>ที่อยู่จัดส่ง:</strong><br>
                  <%= simple_format(@order.customer_address) %>
                </div>
              </div>
            </div>
          </div>

          <!-- สถานะคำสั่งซื้อ -->
          <div class="mb-4">
            <h6 class="text-muted">สถานะคำสั่งซื้อ</h6>
            <div class="status-info">
              <span class="badge bg-<%= @order.status == 'completed' ? 'success' : @order.status == 'pending' ? 'warning' : 'info' %> fs-6">
                <i class="fas fa-<%= @order.status == 'completed' ? 'check' : @order.status == 'pending' ? 'clock' : 'info' %>"></i>
                <%= @order.status.humanize %>
              </span>
              <small class="text-muted d-block mt-1">
                วันที่สั่งซื้อ: <%= @order.created_at.strftime("%d/%m/%Y %H:%M") %>
              </small>
            </div>
          </div>

          <!-- ปุ่มต่างๆ -->
          <div class="d-flex justify-content-between flex-wrap gap-2">
            <div class="btn-group" role="group">
              <% if @order.status == 'pending' %>
                <%= link_to checkout_path(@order.checkout_token), class: "btn btn-outline-primary" do %>
                  <i class="fas fa-edit"></i> แก้ไขข้อมูล
                <% end %>
              <% end %>
            </div>
            
            <div class="btn-group" role="group">
              <% if @order.status == 'pending' %>
                <%= button_to checkout_complete_path(@order.checkout_token), 
                    method: :patch, class: "btn btn-success",
                    data: { confirm: "ยืนยันการชำระเงินเสร็จสิ้น?" } do %>
                  <i class="fas fa-check"></i> ชำระเงินเสร็จสิ้น
                <% end %>
                
                <%= button_to checkout_cancel_path(@order.checkout_token), 
                    method: :patch, class: "btn btn-outline-danger",
                    data: { confirm: "ต้องการยกเลิกคำสั่งซื้อ?" } do %>
                  <i class="fas fa-times"></i> ยกเลิก
                <% end %>
              <% end %>
            </div>
          </div>
          
          <!-- แสดงสถานะ -->
          <div class="mt-3 text-center">
            <% if @order.status == 'completed' %>
              <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                <strong>คำสั่งซื้อเสร็จสิ้นแล้ว</strong><br>
                <small>ขอบคุณที่ใช้บริการ</small>
              </div>
            <% elsif @order.status == 'cancelled' %>
              <div class="alert alert-warning">
                <i class="fas fa-times-circle"></i>
                <strong>คำสั่งซื้อถูกยกเลิกแล้ว</strong>
              </div>
            <% elsif @order.status == 'pending' %>
              <div class="alert alert-info">
                <i class="fas fa-clock"></i>
                <strong>รอดำเนินการชำระเงิน</strong><br>
                <small>กรุณาชำระเงินและแจ้งเจ้าหน้าที่</small>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
