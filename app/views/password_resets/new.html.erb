<%# app/views/password_resets/new.html.erb %>
<div class="mx-auto md:w-1/3 w-full p-8">
  <h1 class="font-bold text-3xl mb-6 text-gray-900">ลืมรหัสผ่าน</h1>

  <% if flash[:alert] %>
    <div class="my-3 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded" role="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <% if flash[:notice] %>
    <div class="my-3 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded" role="alert">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="bg-white border border-gray-200 rounded-xl shadow-sm p-6">
    <p class="text-gray-600 mb-4">กรอกอีเมลของคุณ เพื่อรับลิงก์สำหรับรีเซ็ตรหัสผ่าน</p>
    <%= form_with url: password_resets_path, method: :post, local: true do |form| %>
      <div class="my-5">
        <%= form.label :email, 'อีเมล', class: 'block text-sm font-medium text-gray-700' %>
        <%= form.email_field :email, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", placeholder: "you@example.com", required: true %>
      </div>

      <div class="flex items-center justify-between">
        <%= link_to "กลับไปหน้าเข้าสู่ระบบ", login_path, class: "text-primary-600 hover:underline" %>
        <%= form.submit "ส่งลิงก์รีเซ็ตรหัสผ่าน", class: "rounded-lg py-2.5 px-5 bg-primary-600 hover:bg-primary-700 text-white font-medium cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
