<%# app/views/subscriptions/new.html.erb %>
<section class="pt-8">
  <div class="container mx-auto max-w-2xl px-4 py-8">
    <div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden">
      <div class="bg-gradient-to-r from-blue-500 to-indigo-500 text-white px-8 py-6 text-center">
        <h2 class="text-2xl md:text-3xl font-bold mb-1 flex items-center justify-center gap-2">
          <svg class="w-7 h-7 inline-block mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
          สมัครสมาชิก / ต่ออายุ
        </h2>
        <p class="opacity-80">ค่าบริการ 299 บาท/เดือน</p>
      </div>

      <div class="px-8 py-6">
        <% if @subscription.nil? %>
          <div class="p-4 bg-gray-50 rounded-lg mb-6">
            <p class="text-gray-700">
              <svg class="w-5 h-5 inline mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
              คุณยังไม่มีข้อมูลสมาชิกในระบบ
            </p>
          </div>

        <% elsif @subscription.active? %>
          <div class="p-4 bg-green-50 rounded-lg mb-6">
            <p class="text-green-800">
              <svg class="w-5 h-5 inline mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
              สถานะ: <strong>ใช้งานได้</strong>
            </p>
            <p class="mt-2 text-green-700 text-sm">
              คุณสามารถใช้งานได้จนถึงวันที่: <%= l(@subscription.expires_at, format: :long) if @subscription.expires_at %>
            </p>
          </div>

        <% elsif @subscription.expired? %>
          <div class="p-4 bg-orange-50 rounded-lg mb-6">
            <p class="text-orange-800">
              <svg class="w-5 h-5 inline mr-2 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
              สถานะ: <strong>หมดอายุ</strong>
            </p>
            <p class="mt-2 text-orange-700 text-sm">การเป็นสมาชิกของคุณหมดอายุแล้ว</p>
          </div>
        <% end %>

        <div class="p-4 bg-blue-50 border border-blue-200 rounded-lg mb-6">
          <h3 class="font-semibold text-lg mb-3 text-blue-800">ขั้นตอนการสมัคร</h3>
          <ol class="list-decimal list-inside space-y-2 text-sm text-blue-700">
            <li>โอนเงินจำนวน 299 บาท มาที่บัญชี: <strong>บจก. ไลฟ์ ซีเอฟ (กสิกรไทย) 146-6-14469-3</strong> หรือทำการสแกนจ่าย QR CODE</li>
            <li>บันทึกสลิปการโอนเงินเป็นไฟล์รูปภาพ (PNG, JPG)</li>
            <li>เลือกไฟล์สลิปในช่องด้านล่างนี้ ระบบจะทำการตรวจสอบโดยอัตโนมัติ</li>
          </ol>
        </div>

        <div class="text-center">
          <h3 class="text-xl font-bold text-gray-800 mb-2">ยอดชำระทั้งสิ้น</h3>
          <p class="text-5xl font-bold text-primary-600 mb-6">฿299</p>

          <div class="p-4 bg-gray-50 border rounded-lg mb-6">
            <p class="font-semibold">สแกน QR Code เพื่อชำระเงิน</p>
            <%# หมายเหตุ: ควรเปลี่ยนเบอร์โทรศัพท์/เลขบัญชีเป็นของคุณ %>
            <img src="https://promptpay.io/0812345678/299.png" alt="QR Code" class="mx-auto my-4 w-48 h-48 border rounded-lg">
            <p class="text-sm"><strong>ชื่อบัญชี:</strong> บริษัท ไลฟ์ ซีเอฟ จำกัด</p>
            <p class="text-sm"><strong>ธนาคาร:</strong> กสิกรไทย</p>
          </div>

          <p class="text-gray-500 text-sm my-4">หลังจากโอนเงินเรียบร้อยแล้ว กรุณา **อัปโหลดสลิป** ด้านล่างนี้เพื่อยืนยัน</p>

          <div id="status-message" class="hidden p-4 mb-4 text-sm rounded-lg" role="alert">
            <%# ข้อความจะถูกใส่โดย JavaScript %>
          </div>

          <div id="uploader-container">
            <input type="file" 
                   id="uploaded-file"
                   accept="image/png, image/jpeg, image/jpg"
                   class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 mb-4 cursor-pointer" />
            
            <div id="confirm-button-container">
              <%# ปุ่มยืนยันจะถูกเพิ่มด้วย JavaScript เมื่อสแกนสลิปเรียบร้อย %>
            </div>
          </div>

          <div id="payment-status" class="mt-4"></div>
        </div>

      </div>
    </div>
  </div>
</section>

<%# --- ส่วนของ JavaScript ทั้งหมด --- %>
<script type="module">
  import QrScanner from "/js/qr-scanner.min.js";

  document.addEventListener('DOMContentLoaded', function() {
    // --- อ้างอิงถึง Element ต่างๆ ในหน้าเว็บ ---
    const uploadedFile = document.getElementById('uploaded-file');
    const fileQrResult = document.getElementById('file-qr-result');
    const statusMessage = document.getElementById('status-message');
    const uploaderContainer = document.getElementById('uploader-container');

    // --- ฟังก์ชันสำหรับแสดงสถานะ ---
    function showStatus(message, isSuccess = true) {
      statusMessage.textContent = message;
      statusMessage.className = isSuccess
        ? 'p-4 mb-4 text-sm rounded-lg bg-blue-50 text-blue-800'
        : 'p-4 mb-4 text-sm rounded-lg bg-red-50 text-red-800';
      statusMessage.classList.remove('hidden');
    }

    // --- ฟังก์ชันสำหรับแสดงผลเมื่อสำเร็จ ---
    function showSuccess(message) {
      swal({
        title: "สำเร็จ!",
        text: message,
        icon: "success",
        button: "ไปที่หน้าแดชบอร์ด",
      }).then((willRedirect) => {
        if (willRedirect) {
          window.location.href = "/dashboard";
        }
      });
      uploaderContainer.classList.add('hidden');
    }

    // --- ฟังก์ชันสำหรับเรียก API ของเรา (ตัวอย่าง POST) ---
    function verifySlipWithApi(data) {
      const csrfToken = document.querySelector("meta[name='csrf-token']").getAttribute("content");
      return fetch("/api/v1/subscription/verify_slip", {
        method: "POST",
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': csrfToken
        },
        body: JSON.stringify(data)
      })
      .then(response => response.json());
    }

    // --- Event Listener เมื่อผู้ใช้เลือกไฟล์ ---
    uploadedFile.addEventListener('change', event => {
      const file = uploadedFile.files[0];
      if (!file) return;

      showStatus("สแกนสลิปเรียบร้อย — กดปุ่ม 'ยืนยันการชำระ' เพื่อส่งคำขอ");

      QrScanner.scanImage(file, { returnDetailedScanResult: true })
        .then(result => {
          const qrDataString = result.data;
          if (!qrDataString || qrDataString === QrScanner.NO_QR_CODE_FOUND) {
            showStatus("ไม่พบ QR Code ในรูปภาพนี้", false);
            return;
          }

          // Parse ข้อมูล
          const sending_book = qrDataString.substr(18, 3);
          const transaction_code = qrDataString.substr(25, qrDataString.length - 39);
          const dataToSend = {
            sending_book: sending_book,
            transaction_code: transaction_code
          };

          // สร้างปุ่มยืนยัน (หรือแทนที่ปุ่มเก่า) — ปุ่มจะอยู่ในคอนเทนเนอร์
          const confirmContainer = document.getElementById('confirm-button-container');
          let confirmBtn = document.getElementById('confirm-slip-button');
          if (!confirmBtn) {
            confirmBtn = document.createElement('button');
            confirmBtn.id = 'confirm-slip-button';
            confirmBtn.type = 'button';
            confirmBtn.className = 'w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-3 rounded-lg transition-colors text-lg';
            confirmBtn.innerHTML = '✅ ยืนยันการชำระเงิน';
            confirmContainer.appendChild(confirmBtn);
          }

          // บันทึก dataToSend ไว้ที่ปุ่มสำหรับใช้งานตอนกด
          confirmBtn._payload = dataToSend;

          confirmBtn.onclick = function() {
            showStatus('กำลังยืนยันสลิปกับระบบ...');
            verifySlipWithApi(this._payload)
              .then(response => {
                if (response.success) {
                  showSuccess(response.message || 'ตรวจสอบสำเร็จ');
                } else {
                  showStatus(response.message || 'เกิดข้อผิดพลาดในการตรวจสอบ', false);
                }
              })
              .catch(() => {
                showStatus('เกิดข้อผิดพลาดในการเชื่อมต่อกับเซิร์ฟเวอร์', false);
              });
          };

        })
        .catch(e => {
          showStatus(e || 'ไม่พบ QR Code ในรูปภาพนี้', false);
        });
    });
  });
</script>