<div class="text-center">
  <h1 class="text-4xl font-bold mb-8 text-primary-400">Connect with Facebook</h1>
  
  <% if user_signed_in? %>
    <div class="bg-gray-800 rounded-lg p-8 shadow-xl max-w-md mx-auto">
      <div class="flex flex-col items-center space-y-4">
        <div class="relative">
          <img src="<%= current_user.image %>" alt="<%= current_user.name %>" class="w-24 h-24 rounded-full object-cover border-4 border-primary-500">
          <div class="absolute -bottom-1 -right-1 bg-green-500 w-6 h-6 rounded-full border-2 border-gray-800"></div>
        </div>
        
        <h3 class="text-2xl font-semibold text-primary-300">Welcome, <%= current_user.name %></h3>
        
        <div class="bg-gray-700/50 py-2 px-4 rounded-md text-gray-300 w-full text-center">
          <%= current_user.email %>
        </div>
        
        <div class="mt-6 flex flex-col w-full space-y-3">
          <%= link_to facebook_profile_path, class: "w-full flex items-center justify-center bg-primary-600 hover:bg-primary-700 text-white font-medium py-3 px-4 rounded-md transition-colors duration-200 shadow-md" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            View Facebook Profile
          <% end %>
          
          <%= button_to "Logout", logout_path, method: :delete, class: "w-full bg-red-600 hover:bg-red-700 text-white font-medium py-3 px-4 rounded-md transition-colors duration-200 shadow-md" %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="bg-gray-800 rounded-lg p-8 shadow-xl max-w-md mx-auto">
      <p class="text-gray-300 mb-8 text-lg">Connect with your Facebook account to continue</p>
      
      <div class="relative">
        <%= form_tag "/auth/facebook", method: :post do %>
          <%= button_tag type: "submit", class: "w-full flex items-center justify-center bg-primary-600 hover:bg-primary-700 text-white font-medium py-3 px-4 rounded-md transition-colors duration-200 shadow-md group" do %>
            <svg class="w-6 h-6 mr-2 text-white" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/>
            </svg>
            <span>Sign in with Facebook</span>
          <% end %>
        <% end %>
        
        <div class="mt-6 text-center">
          <p class="text-gray-400 text-sm">By connecting, you agree to our <a href="#" class="text-primary-400 hover:underline">Terms of Service</a></p>
        </div>
      </div>
    </div>
  <% end %>
  
  <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-gray-800/60 rounded-lg p-6 shadow-lg text-left">
      <div class="flex items-center mb-4">
        <div class="bg-indigo-500/20 p-3 rounded-full mr-4">
          <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-white">Secure Login</h3>
      </div>
      <p class="text-gray-400">Connect securely with your Facebook account with OAuth 2.0 authentication.</p>
    </div>
    
    <div class="bg-gray-800/60 rounded-lg p-6 shadow-lg text-left">
      <div class="flex items-center mb-4">
        <div class="bg-indigo-500/20 p-3 rounded-full mr-4">
          <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-white">Stay Updated</h3>
      </div>
      <p class="text-gray-400">Get real-time updates and stay connected with your Facebook content.</p>
    </div>
    
    <div class="bg-gray-800/60 rounded-lg p-6 shadow-lg text-left">
      <div class="flex items-center mb-4">
        <div class="bg-indigo-500/20 p-3 rounded-full mr-4">
          <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a4 4 0 00-4-4H8.8a4 4 0 00-4 4v12h8zm-5 5h5"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-white">Easy Integration</h3>
      </div>
      <p class="text-gray-400">Seamlessly integrate your Facebook data with our powerful platform.</p>
    </div>
  </div>
</div>
