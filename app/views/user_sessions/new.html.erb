<%# app/views/user_sessions/new.html.erb %>

<div class="mx-auto md:w-1/3 w-full p-8">
  <h1 class="font-bold text-4xl mb-6">เข้าสู่ระบบ</h1>

  <%# แสดงข้อความ Alert จาก Controller %>
  <% if flash[:alert] %>
    <div class="my-3 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_with(url: login_path, scope: :session, local: true) do |form| %>
    <div class="my-5">
      <%= form.label :email, 'อีเมล' %>
      <%= form.email_field :email, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :password, 'รหัสผ่าน' %>
      <%= form.password_field :password, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="inline">
      <%= form.submit "เข้าสู่ระบบ", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-4">
    <p>ยังไม่มีบัญชี? <%= link_to "สมัครสมาชิกที่นี่", sign_up_path, class: "text-blue-600 hover:underline" %></p>
  </div>
</div>